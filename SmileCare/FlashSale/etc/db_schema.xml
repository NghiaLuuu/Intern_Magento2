<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/db_schema.xsd">
    <table name="smilecare_flash_sale" resource="default" engine="innodb" comment="Flash Sale Table">
        <column xsi:type="int" name="deal_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Deal ID"/>
        <column xsi:type="int" name="product_id" padding="10" unsigned="true" nullable="false" comment="Product ID"/>
        <column xsi:type="decimal" name="deal_price" scale="4" precision="12" unsigned="false" nullable="false" default="0.0000" comment="Deal Price"/>
        <column xsi:type="int" name="qty_limit" padding="10" unsigned="true" nullable="false" default="0" comment="Quantity Limit"/>
        <column xsi:type="datetime" name="start_time" on_update="false" nullable="false" comment="Start Time"/>
        <column xsi:type="datetime" name="end_time" on_update="false" nullable="false" comment="End Time"/>
        <column xsi:type="smallint" name="is_active" padding="6" unsigned="false" nullable="false" default="1" comment="Is Active"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="deal_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_FLASH_SALE_PRODUCT_ID_CATALOG_PRODUCT_ENTITY_ENTITY_ID" table="smilecare_flash_sale" column="product_id" referenceTable="catalog_product_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
    </table>
</schema>

<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <!-- Flash Sales ACL -->
                <resource id="SmileCare_FlashSale::manager" title="Flash Sales" sortOrder="100">
                    <resource id="SmileCare_FlashSale::deal" title="Manage Deals" sortOrder="10"/>
                </resource>

                <!-- Stores > Settings > Configuration -->
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="SmileCare_FlashSale::config" title="Flash Sale Configuration"/>
                        </resource>
                    </resource>
                </resource>

            </resource>
        </resources>
    </acl>
</config>

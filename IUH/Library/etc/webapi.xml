<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/library/book" method="POST">
        <service class="IUH\Library\Api\BookManagementInterface" method="create"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/library/author" method="POST">
        <service class="IUH\Library\Api\AuthorManagementInterface" method="create"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

</routes>

<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <event name="customer_save_before">
        <observer name="magenest_movie_customer_change_name" instance="Magenest\Movie\Observer\CustomerSaveObserver" />
    </event>

    <event name="magenest_movie_save_before">
        <observer name="magenest_movie_reset_rating" instance="Magenest\Movie\Observer\MovieSaveObserver" />
    </event>

    <event name="core_config_data_save_before">
        <observer name="magenest_movie_config_change_value" instance="Magenest\Movie\Observer\ConfigSaveObserver" />
    </event>

</config>

<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="nghiastore_brand"
           resource="default"
           engine="innodb"
           comment="Nghiastore Brand Table">

        <!-- Primary Key -->
        <column xsi:type="int"
                name="brand_id"
                unsigned="true"
                nullable="false"
                identity="true"
                comment="Brand ID"/>

        <!-- Brand Name -->
        <column xsi:type="varchar"
                name="name"
                nullable="false"
                length="255"
                comment="Brand Name"/>

        <!-- URL Key -->
        <column xsi:type="varchar"
                name="url_key"
                nullable="false"
                length="255"
                comment="URL Key"/>

        <!-- Description -->
        <column xsi:type="text"
                name="description"
                nullable="true"
                comment="Brand Description"/>

        <!-- Image -->
        <column xsi:type="varchar"
                name="image"
                nullable="true"
                length="255"
                comment="Brand Image"/>

        <!-- Is Active -->
        <column xsi:type="smallint"
                name="is_active"
                nullable="false"
                default="1"
                comment="Is Active"/>

        <!-- Is Featured -->
        <column xsi:type="smallint"
                name="is_featured"
                nullable="false"
                default="0"
                comment="Is Featured"/>

        <!-- Primary Key Constraint -->
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="brand_id"/>
        </constraint>

        <!-- Unique URL Key -->
        <constraint xsi:type="unique" referenceId="NGHIASTORE_BRAND_URL_KEY">
            <column name="url_key"/>
        </constraint>

    </table>
</schema>

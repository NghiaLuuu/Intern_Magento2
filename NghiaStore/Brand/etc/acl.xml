<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="NghiaStore_Brand::nghiastore" title="NghiaStore" sortOrder="100">
                    <resource id="NghiaStore_Brand::brand" title="Manage Brands" sortOrder="10">
                        <resource id="NghiaStore_Brand::brand_save" title="Save Brand" sortOrder="10"/>
                        <resource id="NghiaStore_Brand::brand_delete" title="Delete Brand" sortOrder="20"/>
                    </resource>
                </resource>

                <!-- Config ACL -->
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="NghiaStore_Brand::config" title="Brand Configuration"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
